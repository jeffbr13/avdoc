{
  "type": "record",
  "namespace": "com.example",
  "name": "User",
  "doc": "An example Avro schema for a registered user on our website.",
  "fields": [
    {
      "name": "id",
      "type": {
        "type": "string",
        "logicalType": "uuid"
      },
      "doc": "The unique ID of the user."
    },
    {
      "name": "username",
      "type": "string",
      "doc": "The username of the user."
    },
    {
      "name": "password",
      "type": {
        "type": "fixed",
        "size": 16,
        "name": "md5"
      },
      "doc": "Hash of the user's password."
    },
    {
      "name": "email",
      "type": "string",
      "doc": "The email address of the user."
    },
    {
      "name": "address",
      "type": [
        "null",
        {
          "type": "record",
          "name": "Address",
